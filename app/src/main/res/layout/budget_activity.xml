<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".BudgetController">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Budgeting and Goals"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edtNetIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Enter Net Income"
        android:inputType="text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Set Budget Per Category: "
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtEntertainment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Entertainment"
        android:inputType="text"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtUtilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Utilities"
        android:inputType="text"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Food"
        android:inputType="text"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtOtherExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Other"
        android:inputType="text"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Savings Goal %:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtSavingsGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveBudgetInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Budget Goals" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display User Inputed Values Here" />

    <Button
        android:id="@+id/btnBudgetToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Home" />
</LinearLayout>